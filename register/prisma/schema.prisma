generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model tbl_user {
  id            String          @id @default(uuid())
  email         String          @unique
  password      String
  phone         String          @unique
  name          String
  tbl_generator tbl_generator[]
}

model tbl_generator {
  id        String   @id @default(uuid())
  document  String
  birthDate DateTime
  user      tbl_user @relation(fields: [user_id], references: [id])

  user_id String
}
